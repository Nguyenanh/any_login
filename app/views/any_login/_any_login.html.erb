<div id='any_login' class='<%= any_login_klasses %>'>
  <%= form_tag any_login.sign_in_path, :method => :post do %>
    <%= image_tag 'any_login/person.png', onclick: "AnyLogin.on_image_click();" %>
    <span>
      <%= loginable_select %>
      or by
      <%= text_field_tag :id, '', :placeholder => "ID", size: 6 %>
      <%= submit_tag AnyLogin.login_button_label %>

      <%= current_user_information %>
    </span>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
  var AnyLogin = {};
  AnyLogin.on_image_click = function() {
    jQuery('#any_login').find('span').toggle();
    jQuery('#any_login').toggleClass('any_login_visible');
  }
  AnyLogin.on_select_change = function() {
    jQuery('#any_login form').submit();
  }
</script>

<style type="text/css" media="screen">
  #any_login {
    position: absolute;
    opacity: 0.5;
    background: #5c4383;
    color: white;
    font-size: 16px;
    line-height: 20px;
    height: 30px;
  }
  #any_login.any_login_top_left {
    top: 0;
    left: 0;
  }
  #any_login.any_login_top_right {
    top: 0;
    right: 0;
  }
  #any_login.any_login_bottom_left {
    bottom: 0;
    left: 0;
  }
  #any_login.any_login_bottom_right {
    bottom: 0;
    right: 0;
  }
  #any_login.any_login_visible {
    opacity: 1;
  }
  #any_login img {
    cursor: pointer;
    vertical-align: middle;
  }
  #any_login:hover {
    opacity: 1;
  }
  #any_login form {
    padding: 4px 6px;
    padding-bottom: 7px;
  }
  #any_login span {
    display: none;
    vertical-align: middle;
  }
  #any_login.any_login_auto_show span {
    display: inline;
  }
  #any_login .any_login_user_information {
    padding-left: 10px;
  }
</style>